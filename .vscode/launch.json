{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        },
        {
            "type": "safari",
            "request": "launch",
            "name": "Launch Safari against localhost",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}"
        }
    ]
}